{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <header class="space-top">
        <h1 class="page-title">Dashboard</h1>
        <p class="lead">Authenticated and 2FA-verified session.</p>
    </header>

    <section class="card">
        <div class="row row-between">
            <strong>Administration</strong>
            <span class="pill">Security</span>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <p class="lead lead-tight">
                <a href="{{ path('identity_access_admin_user_new') }}">Create user account</a>
            </p>
        {% else %}
            <p class="lead lead-tight">User creation page: <code>/admin/users/new</code> (ROLE_ADMIN required).</p>
        {% endif %}
    </section>

    <div class="space-top">
        {{ component('dashboard_board') }}
    </div>

    <p class="space-top"><a href="{{ path('identity_access_logout') }}">Logout</a></p>
{% endblock %}
