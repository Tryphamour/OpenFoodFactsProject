<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Open Food Facts Dashboard{% endblock %}</title>
    {% block importmap %}{{ importmap('app') }}{% endblock %}
</head>
<body>
<main class="app-shell">
    {% for message in app.flashes('auth_error') %}
        <div class="flash flash-error">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('auth_success') %}
        <div class="flash flash-success">{{ message }}</div>
    {% endfor %}

    {% block body %}{% endblock %}
</main>
</body>
</html>
