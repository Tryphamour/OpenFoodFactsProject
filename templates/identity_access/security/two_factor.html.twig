{% extends 'base.html.twig' %}

{% block title %}Two-factor verification{% endblock %}

{% block body %}
    <section class="card auth-card">
        <span class="pill">Second Factor</span>
        <h1 class="page-title">Two-factor verification</h1>
        <p class="lead">Check your mailbox for the 6-digit verification code.</p>

        <form method="post" action="{{ path('identity_access_2fa') }}" class="stack">
            <div class="stack stack-tight">
                <label for="code">Verification code</label>
                <input id="code" type="text" name="code" minlength="6" maxlength="6" required>
            </div>
            <div class="row">
                <button type="submit">Verify</button>
            </div>
        </form>
    </section>
{% endblock %}
