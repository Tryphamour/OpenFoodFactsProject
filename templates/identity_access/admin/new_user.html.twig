{% extends 'base.html.twig' %}

{% block title %}Create User{% endblock %}

{% block body %}
    <section class="card admin-card">
        <span class="pill">Admin</span>
        <h1 class="page-title">Create user account</h1>
        <p class="lead">Admin-only interface for account provisioning.</p>

        <form method="post" action="{{ path('identity_access_admin_user_new') }}" class="stack">
            <div class="stack stack-tight">
                <label for="email">Email</label>
                <input id="email" type="email" name="email" value="{{ form_data.email }}" required>
            </div>

            <div class="stack stack-tight">
                <label for="password">Temporary password</label>
                <input id="password" type="password" name="password" minlength="10" required>
            </div>

            <label class="row row-gap-sm admin-label">
                <input type="checkbox" name="is_admin" value="1" {% if form_data.is_admin %}checked{% endif %}>
                <span>Grant admin role</span>
            </label>

            <input type="hidden" name="_token" value="{{ csrf_token('admin_user_create') }}">
            <div class="row">
                <button type="submit">Create account</button>
                <a href="{{ path('dashboard_home') }}">Back to dashboard</a>
            </div>
        </form>
    </section>
{% endblock %}
